      <VBox.margin>
         <Insets bottom="60.0" top="100.0" />
      </VBox.margin>
      <children>
         <Label text="Bienvenido a PartyHub" textAlignment="CENTER" textFill="MAGENTA">
            <font>
               <Font size="50.0" />
            </font>
         </Label>
      </children>
   </HBox>
   <HBox alignment="CENTER" prefHeight="178.0" prefWidth="1000.0">
      <children>
         <VBox alignment="CENTER" prefHeight="225.0" prefWidth="148.0">
            <children>
               <Label text="Email:" textFill="WHITE">
                  <VBox.margin>
                     <Insets bottom="13.0" />
                  </VBox.margin>
                  <font>
                     <Font size="16.0" />
                  </font>
               </Label>
               <Label text="Contraseña:" textFill="WHITE">
                  <font>
                     <Font size="16.0" />
                  </font></Label>
            </children>
         </VBox>
         <VBox alignment="CENTER" prefHeight="143.0" prefWidth="215.0">
            <children>
               <TextField fx:id="fieldEmail">
                  <VBox.margin>
                     <Insets bottom="10.0" />
                  </VBox.margin>
               </TextField>
               <PasswordField fx:id="fieldPassword" />
            </children>
         </VBox>
      </children>
      <padding>
         <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
      </padding>
   </HBox>
    <Button fx:id="buttonLogIn" prefWidth="150.0" text="Inicie sesión" textFill="#00b2ff">
      <font>
         <Font size="16.0" />
      </font></Button>
   <Label fx:id="errorText" textFill="RED" />
</VBox>
